
 
 <h1>Eat Them Burgers!</h1>

 <h2>Burgers that are not Devoured</h2>

<ol>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ol>

<h2>Burgers that are devoured!</h2>

<ol>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bgr">Burger Name:</label>
    <input type="text" id="brg" name="burger_name">
  </div>

